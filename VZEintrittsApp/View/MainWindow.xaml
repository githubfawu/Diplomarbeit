<Window x:Class="VZEintrittsApp.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModel="clr-namespace:VZEintrittsApp.ViewModel"
        mc:Ignorable="d"
        Title="VZ Eintritte" Height="1050" Width="1150"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <ResourceDictionary Source="/View/styles.xaml"/>
    </Window.Resources>

    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black"/>
            <GradientStop Color="#FF3B6A98" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid Margin="0,365,0,0">
        <DockPanel Margin="0,0,0,0">
            <TabControl Style="{StaticResource TabControl}" Name="Prototyp" Height="660" Width="1150">
                <TabItem Style="{StaticResource Tab}" Header="Details zur Person">
                    <TabPanel>
                        <Grid MinWidth="1200" MinHeight="620">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="0.5*" />
                                <RowDefinition Height="0.75*" />
                                <RowDefinition Height="0.75*" />
                                <RowDefinition Height="0.75*" />
                                <RowDefinition Height="0.75*" />
                                <RowDefinition Height="0.75*" />
                                <RowDefinition Height="0.75*" />
                                <RowDefinition Height="0.75*" />
                            </Grid.RowDefinitions>
                            <Label Grid.Column="0" Grid.Row="0" Content="Details zur Person:" Foreground="White"/>
                            <Label Style="{StaticResource LabelStandard}" Grid.Column="0" Grid.Row="1" Content="Kürzel:"/>
                            <TextBox Style="{StaticResource TextboxStandard}" Grid.Column="0" Grid.Row="1" Text="{Binding ElementName=ListViewOpenEntries, Path=SelectedItem.Abbreviation}" IsEnabled="False"/>
                            <Label Style="{StaticResource LabelStandard}" Grid.Column="0" Grid.Row="2" Content="Anzeigename:"/>
                            <TextBox Style="{StaticResource TextboxStandard}" Grid.Column="0" Grid.Row="2" />
                            <Label Style="{StaticResource LabelStandard}" Grid.Column="0" Grid.Row="3" Content="Vorname:"/>
                            <TextBox Style="{StaticResource TextboxStandard}" Grid.Column="0" Grid.Row="3" Text=""/>
                            <Label Style="{StaticResource LabelStandard}" Grid.Column="0" Grid.Row="4" Content="Nachname:"/>
                            <TextBox Style="{StaticResource TextboxStandard}" Grid.Column="0" Grid.Row="4" Text=""/>
                            <Label Style="{StaticResource LabelStandard}" Grid.Column="0" Grid.Row="5" Content="Abteilungsname:"/>
                            <TextBox Style="{StaticResource TextboxStandard}" Grid.Column="0" Grid.Row="5" Text=""/>
                            <Label Style="{StaticResource LabelStandard}" Grid.Column="0" Grid.Row="6" Content="Geschäftsbereich:"/>
                            <TextBox Style="{StaticResource TextboxStandard}" Grid.Column="0" Grid.Row="6" Text=""/>
                            <Label Style="{StaticResource LabelStandard}" Grid.Column="1" Grid.Row="1" Content="Pensum:"/>
                            <TextBox Style="{StaticResource TextboxStandard}" Grid.Column="1" Grid.Row="1" Text=""/>
                            <Label Style="{StaticResource LabelStandard}" Grid.Column="1" Grid.Row="2" Content="Rang:"/>
                            <TextBox Style="{StaticResource TextboxStandard}" Grid.Column="1" Grid.Row="2" Text=""/>
                            <Label Style="{StaticResource LabelStandard}" Grid.Column="1" Grid.Row="3" Content="Kaderstufe:"/>
                            <TextBox Style="{StaticResource TextboxStandard}" Grid.Column="1" Grid.Row="3" Text=""/>
                            <Label Style="{StaticResource LabelStandard}" Grid.Column="1" Grid.Row="4" Content="Geburtsdatum:"/>
                            <TextBox Style="{StaticResource TextboxStandard}" Grid.Column="1" Grid.Row="4" Text=""/>
                            <Label Style="{StaticResource LabelStandard}" Grid.Column="1" Grid.Row="5" Content="Standort:"/>
                            <TextBox Style="{StaticResource TextboxStandard}" Grid.Column="1" Grid.Row="5" Text=""/>
                            <Label Style="{StaticResource LabelStandard}" Grid.Column="1" Grid.Row="6" Content="Vorgesetzter:"/>
                            <TextBox Style="{StaticResource TextboxStandard}" Grid.Column="1" Grid.Row="6" Text=""/>
                            <Label Style="{StaticResource LabelStandard}" Grid.Column="2" Grid.Row="1" Content="Regionenleiter:"/>
                            <TextBox Style="{StaticResource TextboxStandard}" Grid.Column="2" Grid.Row="1" Text=""/>
                            <Label Style="{StaticResource LabelStandard}" Grid.Column="2" Grid.Row="2" Content="Bereichsleiter:"/>
                            <TextBox Style="{StaticResource TextboxStandard}" Grid.Column="2" Grid.Row="2" Text=""/>
                            <Label Style="{StaticResource LabelStandard}" Grid.Column="2" Grid.Row="3" Content="E-Mail Adresse:"/>
                            <TextBox Style="{StaticResource TextboxStandard}" Grid.Column="2" Grid.Row="3" Text="" IsEnabled="False"/>
                            <Label Style="{StaticResource LabelStandard}" Grid.Column="2" Grid.Row="4" Content="Telefonnummer:"/>
                            <TextBox Style="{StaticResource TextboxStandard}" Grid.Column="2" Grid.Row="4" Text="" IsEnabled="False"/>
                            <Label Style="{StaticResource LabelStandard}" Grid.Column="2" Grid.Row="5" Content="Eintrittsdatum:"/>
                            <TextBox Style="{StaticResource TextboxStandard}" Grid.Column="2" Grid.Row="5" Text=""/>
                            <Button Grid.Column="2" Grid.Row="7" Margin="10,10,160,40"  Name="ButtonSave" Command="{Binding UpdateCommand}" FontSize="20" Background="#FFDA632D">Speichern</Button>
                        </Grid>
                    </TabPanel>
                </TabItem>
                <TabItem Style="{StaticResource Tab}" Header="Erweiterte Funktionen" />
                <TabItem Style="{StaticResource Tab}" Header="Berechtigungen" />
                <TabItem Style="{StaticResource Tab}" Header="Datensatz" />
            </TabControl>

        </DockPanel>
        <!--<ListView Margin="10,-350,360,680"
                  Name="ListViewOpenEntries"
                  ItemsSource="{Binding RecordList}"
                  SelectedItem="{Binding SelectedRecord}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <Label Style="{StaticResource LabelListView}" Content="{Binding EmployeeNr}" FontWeight="Bold"/>
                        <Label Style="{StaticResource LabelListView}" Content="{Binding Abbreviation}"/>
                        <Label Style="{StaticResource LabelListView}" Content="{Binding Status}"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>-->

        <ListView Name="ListViewOpenEntries" Margin="10,-350,360,680"
                  ItemsSource="{Binding RecordList}"
                  SelectedItem="{Binding SelectedRecord}">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"></Setter>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="100" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="{Binding EmployeeNr}"/>
                        <TextBlock Grid.Column="1" Text="{Binding Abbreviation}" />
                        <TextBlock Grid.Column="2" Text="{Binding Status}" />
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>



        <Rectangle Style="{StaticResource Rectangle}" Margin="850,-1100,0,0" Drop="Document_Drop">
            <Rectangle.OpacityMask>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.OpacityMask>
            <Rectangle.Effect>
                <BlurEffect/>
            </Rectangle.Effect>
        </Rectangle>

    </Grid>
</Window>
